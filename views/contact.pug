extend base.pug
block scripts
    script(src='/static/index.js')
block style
    style
        include ../static/style.css
        include ../static/contact.css
block content
    h1 Contact Us
    form(action="/contact",method="post",class="myform")
        input(type="text",class="myinp",name="name",placeholder="Enter your name")
        input(type="phone",class="myinp",name="phone",placeholder="Enter your phone")
        input(type="email",class="myinp",name="email",placeholder="Enter your email")
        input(type="text",class="myinp",name="address",placeholder="Enter your address")
        input(type="text",class="myinp",name="desc",placeholder="Enter your concern")
        button(class="btn")
            | Submit

